{
	"name": "lsp-ibmcloud",
	"description": "A language server for ibmcloud services",
	"author": "Laura Luan",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/IBM/lsp-ibmcloud"
	},
	"publisher": "IBM",
	"categories": [
		"Snippets",
		"Other"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:yaml",
		"onCommand:extension.refreshibmcloudcatalog",
		"onCommand:extension.showibmcloudcatalog"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "CRD support configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"commands": [
			{
				"command": "extension.refreshibmcloudcatalog",
				"title": "Load IBM CLoud Service Catalog"
			},
			{
				"command": "extension.showibmcloudcatalog",
				"title": "Show IBM CLoud Service Catalog"
			}
		],
		"snippets": [
			{
				"language": "yaml",
				"path": "./snippets/iter8-snippets.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/ibmcloud-snippets.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/knative-snippets.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"js-yaml": "^3.13.1",
		"node-fetch": "^3.1.1"
	}
}
